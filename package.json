{
  "name": "version-check",
  "version": "1.0.2",
  "description": "A GitHub Action to check version changes in any file format",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.ts -o dist",
    "dev": "tsx src/index.ts",
    "test": "vitest"
  },
  "keywords": [
    "github-actions",
    "version-check",
    "semver"
  ],
  "author": "rxliuli",
  "license": "MIT",
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "pnpm build",
      "git add dist"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "semver": "^7.5.4",
    "toml": "^3.0.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/semver": "^7.5.6",
    "@vercel/ncc": "^0.38.4",
    "lint-staged": "^16.2.6",
    "simple-git-hooks": "^2.13.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "packageManager": "pnpm@10.15.1+sha512.34e538c329b5553014ca8e8f4535997f96180a1d0f614339357449935350d924e22f8614682191264ec33d1462ac21561aff97f6bb18065351c162c7e8f6de67"
}